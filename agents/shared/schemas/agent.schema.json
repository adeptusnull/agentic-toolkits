{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Instruction Schema",
  "type": "object",
  "required": [
    "name",
    "version"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string"
    },
    "principles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "modes": {
      "type": "object"
    },
    "calibration": {
      "type": "object"
    },
    "output_templates": {
      "type": "object"
    }
  },
  "additionalProperties": true
}